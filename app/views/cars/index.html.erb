<div class="container">

  <h1>Voici les voitures</h1>

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>

  <div class="cards">
    <% @cars.each do |car| %>
    <div class="cards-and-description">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photos.first.key %>')">
        </div>
      <div class="car-spec">
        <h6>
        <%= car.brand %>
        <%= car.year %>
        </h6>
        <p>
        <%= car.engine %>
        <%= car.color %>
        <%= car.car_type %>
        <%= link_to "Allez voir cette voiture", car_path(car) %>
        <%= link_to "Supprimer cette voiture #{car.brand}",
            car_path(car),
            method: :delete,
            data: { confirm: "Are you sure?"} %>

        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Ajouter une voiture", new_car_path(@car) %>
