<div class="container">

  <h1>Voici les voitures</h1>

  <%= form_tag cars_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a car"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

    <%# <div style="width: 100%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>
      <%# data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>
    <%# </div> %>

    <div class="cards">
      <% @cars.each do |car| %>
        <%= link_to car_path(car), class:'link-index' do %>
          <div class="cards-and-description">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photos.first.key%>')">
              </div>
                <div class="car-spec">
                  <strong>

                <h2> Brand: <%= car.brand %> </h2>

                <h4> Model: <%= car.model %> </h4>
                  </strong>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>

<%= link_to "Ajouter une voiture", new_car_path %>
